unit World3D;

interface

type

  {Структура камеры, не зависящая от используемой графической библиотеки}
  TCamera3D=record
    {Координаты камеры в мировом пространстве}
    CX:integer;
    CY:integer;
    CZ:integer;
    {Повороты камеры в мировом пространстве}
    RX:integer;
    RY:integer;
    RZ:integer;
    {Цель камеры - в какую точку камера смотрит}
    TX:integer;
    TY:integer;
    TZ:integer;
  end;

  {Структура, содержащая параметры кисти}
  TBrush3D=record
    {Координаты кисти в мировом пространстве}
    CX:integer;
    CY:integer;
    CZ:integer;
    {Размер (радиус от центра) кисти в мировом пространства}
    SX:integer;
    SY:integer;
    SZ:integer;
    {Цвет кисти}
  end;

implementation

end.
